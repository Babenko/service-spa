<!--Intro and service-->
<div id="intro" class="section scrollspy">
  <div class="container">
    <div class="row">
      <div  class="col s12">
        <h2 class="center header text_h2"> {{service.title}} </h2>
      </div>

      {{#each service.features as |feature|}}
        <div  class="col s12 m4 l4">
          <div class="center promo promo-example">
            <i class="{{feature.icon}}"></i>
            <h5 class="promo-caption">{{feature.title}}</h5>
            <p class="light center">{{feature.description}}</p>
          </div>
        </div>
      {{/each}}

    </div>
  </div>
</div>