<!--Work-->
<div class="section scrollspy" id="work">
  <div class="container">
    <h2 class="header text_b">{{work.title}} </h2>
    <div class="row">
      {{#each work.examples as |example|}}
        <div class="col s12 m4 l4">
          <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator" src="{{example.img}}">
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4">{{example.title}} <i class="mdi-navigation-more-vert right"></i></span>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4">{{example.title}}<i class="mdi-navigation-close right"></i></span>
              <p>{{example.description}}</p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>